<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    android:background="#FFFFFF"
    tools:context=".common.FoodItemActivitys">

    <TextView
        android:id="@+id/tvFood1"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:text="Salad Bơ"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFood1" />

    <TextView
        android:id="@+id/tvPrice1"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:text="30000 đ"
        android:textColor="#FF0000"
        app:layout_constraintStart_toStartOf="@+id/tvFood1"
        app:layout_constraintTop_toBottomOf="@+id/tvFood1" />

    <ImageView
        android:id="@+id/ivFood1"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image6" />

</androidx.constraintlayout.widget.ConstraintLayout>