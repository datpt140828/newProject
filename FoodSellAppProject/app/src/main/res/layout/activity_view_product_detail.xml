<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.manage.ViewProductDetailActivity">

    <TextView
        android:id="@+id/tvNameOfFood1"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="Tên sản phẩm"
        android:textAlignment="textStart"
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivFood"
        android:layout_width="328dp"
        android:layout_height="270dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvNameOfFood1"
        app:layout_constraintTop_toBottomOf="@+id/tvNameOfFood1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:text="Mô tả"
        android:textAlignment="viewStart"
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ivFood"
        app:layout_constraintTop_toBottomOf="@+id/ivFood" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="338dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:text="Đây là đặc sản ngon nhất phú xuyên"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/btnModify"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/chitiet"
        android:text="Sửa"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvNameOfFood1"
        app:layout_constraintTop_toTopOf="@+id/tvNameOfFood1" />

    <TextView
        android:id="@+id/tvPriceA"
        android:layout_width="168dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="30000"
        android:textAlignment="textEnd"
        android:textColor="#F40000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

</androidx.constraintlayout.widget.ConstraintLayout>